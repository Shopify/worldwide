{
    "extends": "@shopify/typescript-configs/library.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "ES6",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@data/*": ["../../db/data/*"]
        },
        "rootDir": ".",
        "types": ["vitest/globals"],
    },
    "include": [
        "src/**/*.ts",
        "vitest.config.ts",
        "rollup.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}
